        <script>
            $(document).ready(function () {

                $("#StateID").change(function () {
                    var id = $(this).val();
                    $("#CityID").empty();
                    $.get("Citybind", { state_id: id }, function (data) {
                        var v = "<option>---Select City---</option>";
                        $.each(data, function (i, v1) {
                            v += "<option value=" + v1.Value + ">" + v1.Text + "</option>";
                        });
                        $("#CityID").html(v);
                    });
                });
            });
